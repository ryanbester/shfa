{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "version": "${version}",

  "name": "${mod_name}",
  "description": "${mod_description}",
  "authors": [
    "${mod_author}"
  ],
  "contact": {
    "homepage": "${mod_homepage}",
    "sources": "${mod_sources}",
    "issues": "${mod_issues}"
  },
  "environment": "client",
  "entrypoints": {
    "client": [
      "com.ryanbester.shfa.fabric.SHFA"
    ],
    "modmenu": [
      "com.ryanbester.shfa.fabric.ModMenuApiImpl"
    ]
  },
  "mixins": [
    "shfa.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.11.3",
    "fabric": "*",
    "minecraft": "1.18.x"
  }
}